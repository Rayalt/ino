//- Стандартный шаблон страницы
include ../pug/mixins.pug

doctype html
html(class='no-js', lang='ru-RU')
	head
		meta(http-equiv='content-type' content='text/html;charset=UTF-8')
		meta(charset='utf-8')
		meta(name='viewport', content='width=device-width, user-scalable=0, initial-scale=1.0, maximum-scale=3.0, minimum-scale=0.1, shrink-to-fit=no')
		meta(name='google', content='notranslate')
		meta(name='format-detection', content='telephone=no')
		meta(name='format-detection', content='date=no')
		meta(name='format-detection', content='address=no')
		meta(name='format-detection', content='email=no')
		meta(name='HandheldFriendly' content='true')
		meta(name='robots', content='index, follow')
		meta(name='msapplication-TileColor' content='#da532c')
		meta(name='theme-color' content='#ffffff')

		link(rel='apple-touch-icon', sizes='152x152', href='/img/favicon/apple-touch-icon.png')
		link(rel='icon', type='image/png', sizes='32x32', href='/img/favicon/favicon-32x32.png')
		link(rel='icon', type='image/png', sizes='16x16', href='/img/favicon/favicon-16x16.png')
		link(rel='manifest', href='/img/favicon/site.webmanifest')
		link(rel='mask-icon', href='/img/favicon/safari-pinned-tab.svg', color='#5bbad5')

		link(rel='preconnect', href='https://fonts.gstatic.com')
		link(rel='stylesheet', href='https://fonts.googleapis.com/css2?family=Raleway:ital,wght@0,300;0,400;0,500;0,600;0,700;1,500&display=swap')

		title Сертификат
		meta(name='description', content='')
		meta(name='keywords', content='')

		style.
			*,
			*::before,
			*::after {
				box-sizing: border-box;
			}

			@at-root {
				@-ms-viewport {
					width: device-width;
				}
			}
			html,
			body {
				height: 100%;
			}

			html {
				-webkit-tap-highlight-color: rgba(var(--color-black), 0);
				-webkit-text-size-adjust: 100%;
				font-family: sans-serif;
				line-height: 100%;
			}

			body {
				background: var(--body-bg);
				color: var(--body-color);
				font-family: 'DejaVu Sans';
				margin: 0;
			}

			article, aside, figcaption, figure, footer, header, hgroup, main, nav, section {
				display: block;
			}

			[tabindex='-1']:focus {
				outline: 0 !important;
			}

			[hidden] {
				display: none !important;
			}

			.certificate {
				align-items: center;
				display: flex;
				flex-direction: column;
				height: 712px;
				position: relative;
				width: 1013px;
			}

			.certificate__img {
				object-fit: cover;
				position: absolute;
				width: 100%;
				z-index: -1;
			}

			.certificate__content {
				display: flex;
				flex-direction: column;
				height: 100%;
				justify-content: space-between;
				padding: 300px 0 104px 0;
				text-align: center;
				width: 760px;
			}

			.certificate__row {}

			.certificate__text {
				font-size: 18px;
				line-height: 1.35;
				margin: 0;
			}

			.certificate__text + .certificate__text {
				margin-top: 24px;
			}

			.certificate__title, .certificate__date {
				font-size: 20px;
				font-style: italic;
				line-height: 1.35;
			}

			.certificate__title {
				margin: 8px 0 0 0;
			}

			.certificate__date {
				margin: 0;
			}

			.certificate__volume {
				font-size: 20px;
				font-style: italic;
				line-height: 1.35;
				margin: 8px 0 0 0;
			}

			.certificate__name {
				font-size: 22px;
				font-style: italic;
				line-height: 1.35;
			}

			.certificate__sertify {
				display: flex;
				justify-content: space-between;
			}

			.certificate__sign {
				position: relative;
			}

			.certificate__sign-icon {
				bottom: -30px;
				display: block;
				height: 71px;
				left: 50%;
				position: absolute;
				transform: translateX(-60%);
				width: 70px;
			}

			.certificate__city {
				font-size: 18px;
				line-height: 1.35;
				margin: 16px 0 0 0;
			}

			.certificate__stamp {
				bottom: -45px;
				position: absolute;
				right: -5%;
				width: 150px;
				z-index: 2;
			}

	body
		.certificate
			img.certificate__img(src='img/img__certificate.jpg')
			.certificate__content
				.certificate__row
					p.certificate__text подтверждает, что #[strong(class='certificate__name') Идиатуллин Артур Вагизович]
					p.certificate__text прошел (ла) обучение в рамках образовательного семинара
					h1.certificate__title «Создание специальных кадровых условий для обеспечения доступности общеобразовательных организаций для учащихся с ОВЗ и детей-инвалидов»
					p.certificate__date «15» сентября 2021 г.
					p.certificate__volume в объеме 8 академических часов
				.certificate__row
					.certificate__sertify
						p.certificate__text «15» сентября 2021 г.
						.certificate__sign
							p.certificate__text Ректор _____________ Н.М. Прусс
							img.certificate__sign-icon(src='img/img__sign.png')
							img.certificate__stamp(src='img/img__stamp.png')
					p.certificate__city Казань – 2021
